<%- include("header") -%>
   <div class="box" id="heading">
      <h1><%=listTitle%></h1>
   </div>
   <div class="box">

      <%  hereitems.forEach(function(item){%>
         <form action="/delete" method="post">
         <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
            <p><%= item.name%></p>
            <input type="hidden" name="listName" value="<%=listTitle%>"></input>
         </div>
      </form>
         <%})%>
   <form class="item" action="/" method="post">
      <input class="" type="text" name="itemText" placeholder="New Item" required>
      <button class="" type="submit" name="list" value="<%=listTitle%>">+</button>

 
   </form>
</div>
